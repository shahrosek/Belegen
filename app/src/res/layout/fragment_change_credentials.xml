<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            style="@style/input_label_style"
            android:text="Current Username"
            />
        <EditText
            android:id="@+id/curr_username"
            style="@style/input_style"
            android:inputType="text"
            />
        <TextView
            style="@style/input_label_style"
            android:text="Current Password"
            />
        <EditText
            android:id="@+id/curr_password"
            style="@style/input_style"
            android:inputType="textPassword"
            />
        <TextView
            style="@style/input_label_style"
            android:text="New Username"
            />
        <EditText
            android:id="@+id/new_username"
            style="@style/input_style"
            android:inputType="text"
            />
        <TextView
            style="@style/input_label_style"
            android:text="New Password"
            />
        <EditText
            android:id="@+id/new_password"
            style="@style/input_style"
            android:inputType="textPassword"
            android:elevation="80dp"
            />
        <Button
            android:id="@+id/btn_update"
            style="@style/btn"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:text="UPDATE"
            android:paddingStart="40dp"
            android:paddingEnd="20dp"
            android:drawableEnd="@drawable/ic_btn_update"
            android:drawableTint="@color/dynamic_foreground_btn"
            />
    </LinearLayout>
</ScrollView>