<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/list_item"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/lbl_filling_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILLING POINT: "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/filling_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/lbl_filling_point"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/fuel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filling_point"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/fuel_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/unit"
        app:layout_constraintTop_toBottomOf="@id/filling_point"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="units left"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filling_point"
        />

</androidx.constraintlayout.widget.ConstraintLayout>