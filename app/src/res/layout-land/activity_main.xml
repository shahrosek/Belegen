<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="2000dp"
            android:layout_height="2000dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="800dp"
                android:layout_height="83dp"
                android:background="#e10032"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="193dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="352dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:text="Sign In"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="124dp"
                android:layout_height="100dp"
                android:layout_marginStart="300dp"
                android:layout_marginEnd="101dp"
                app:srcCompat="@drawable/lol" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="120dp"
                android:fontFamily="monospace"
                android:text="BELEGEN"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/corners"
                android:ems="10"
                android:hint="  Username"
                android:inputType="textPersonName"
                android:shadowColor="@android:color/darker_gray"
                android:textAlignment="textStart" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="69dp"
                android:background="@drawable/corners"
                android:ems="10"
                android:hint="  Password"
                android:inputType="textPassword"
                android:shadowColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="120dp"

                android:background="@drawable/buttons"
                android:drawableRight="@drawable/signin2"
                android:drawablePadding="@android:dimen/notification_large_icon_height"
                android:text="  Login"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="190dp"
                android:layout_height="26dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="282dp"
                android:layout_marginRight="320dp"
                android:contextClickable="true"

                android:onClick="forgot_password"
                android:text="@string/forgot_password"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pwd" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>